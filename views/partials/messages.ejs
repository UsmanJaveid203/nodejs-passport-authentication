<% if (typeof errors != 'undefined' ) { %>
    <% errors.forEach(function(err){ %>
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <%= err.msg %>
        </div> 
    <% }); %> 
<% } %> 

<% if (success_msg != '' ) { %>
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <%= success_msg %>
        </div>
<% } %> 

<% if (error != '' ) { %>
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <%= error %>
        </div> 
<% } %> 